<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MIAAppCrossPlatform.Views.LoginFragment">
  <ContentView.Content>
        <ScrollView>
            <StackLayout
                HorizontalOptions="Fill"
                VerticalOptions="Fill">

                <ScrollView
                    x:Name="svLogin"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">

                    <StackLayout
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"
                            Margin="0"
                            Padding="0">
                        
                        <Image
                            x:Name="imageView3"
                            HorizontalOptions="Center"
                            VerticalOptions="Start"
                            Margin="100, 30, 100, 25"
                            Source="{OnPlatform Android=@drawable/Logo, iOS=Logo}"/>

                        <Label
                            x:Name="tv_title"
                            HorizontalOptions="Fill"
                            VerticalOptions="Start"
                            Margin="15, 15, 8, 0"
                            Text="MIA- Privilege Scheme"
                            HorizontalTextAlignment="Center"
                            FontSize="26"
                            FontAttributes="Bold"/>

                        <Label
                            x:Name="tv_subtitle"
                            HorizontalOptions="Fill"
                            VerticalOptions="Start"
                            Margin="0, 0, 0, 20"
                            Text="Sign in your MIA account!"
                            HorizontalTextAlignment="Center"
                            FontSize="17"/>

                        <Entry
                            x:Name="et_idCard"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"
                            Margin="30, 0, 30, 8"
                            Placeholder="ID Card"
                            FontSize="15"
                            MaxLength="8"/>

                        <Entry
                            x:Name="et_password"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"
                            Margin="30, 0, 30, 8"
                            Placeholder="Password"
                            IsPassword="True"
                            FontSize="15"/>

                        <Grid
                            x:Name="containerFeature"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"                            
                            Margin="25, 0, 25, 10">

                            <CheckBox
                                x:Name="chkRemember"
                                HorizontalOptions="End"
                                WidthRequest="165"
                                HeightRequest="49"
                                Grid.Column="0"
                                Margin="0, 0, 0, 0"
                                Color="#AA0A2F"/>

                            <Label
                                x:Name="chkRemember_text"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Text="Remember me"
                                MaxLines="1"/>

                            <Button
                                x:Name="btn_forgotPassword"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center"
                                Grid.Column="4"
                                Grid.ColumnSpan="4"
                                Text="Forgot Password"
                                BackgroundColor="#AA0A2F"
                                TextColor="White"
                                Clicked="Btn_forgotPassword_Clicked"/>
                        </Grid>
                        <Label
                            x:Name="validationText"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            FontSize="15"
                            Margin="0"/>

                        <Button
                                x:Name="btn_login"
                                WidthRequest="120"
                                HeightRequest="60"
                                HorizontalOptions="Center"
                                VerticalOptions="End"
                                Margin="8, 10, 8, 10"
                                Text="Sign in"
                                FontSize="16"
                                BackgroundColor="#AA0A2F"
                                TextColor="White"
                                Clicked="Btn_login_Clicked"/>

                        <Label
                                HorizontalOptions="Center"
                                VerticalOptions="End"
                                Margin="50, 0, 50, 20"
                                MaxLines="1"
                                Text="If you are new, register your account first."/>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </ScrollView>
  </ContentView.Content>
</ContentView>